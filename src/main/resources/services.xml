<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />

    <context:component-scan base-package="com.epam.services"/>

    <import resource="classpath:repositories.xml"/>

    <bean id="orderService" class="com.epam.services.impl.OrderServiceImpl"/>

     <bean id="itemService" class="com.epam.services.impl.ItemServiceImpl">
         <constructor-arg index="0" type="java.lang.String" value="item1"/>
         <constructor-arg index="1" type="java.lang.String" value="meters"/>
    </bean>

    <bean id="sellerService" class="com.epam.services.impl.SellerServiceImpl" autowire="byType"/>

    <bean id="productService" class="com.epam.services.impl.ProductServiceImpl" autowire="constructor" />

    <bean id="proposalService" class="com.epam.services.impl.ProposalServiceImpl">
        <constructor-arg index="0" type="com.epam.repositories.UserRepository" ref="userRepository"/>
        <property value="proposal1" name="proposalName"/>
    </bean>

</beans>