<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:user.properties"/>

    <bean id="orderRepositoryFactory" class="com.epam.repositories.factory.OrderRepositoryFactory">
        <property value="${initialSequence}" name="sequentialId"/>
    </bean>

    <bean id="orderRepository" factory-bean="orderRepositoryFactory" factory-method="createOrderRepository"/>

    <bean id="userRepositoryFactory" class="com.epam.repositories.factory.UserRepositoryFactory"/>

    <bean id="userRepository" factory-bean="userRepositoryFactory" factory-method="createUserRepository"/>

</beans>